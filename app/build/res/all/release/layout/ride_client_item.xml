<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/ride_item_height"
    android:orientation="vertical"
    android:background="@color/pagerBorder">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/selectorBg">

        <TextView
            android:id="@+id/time_to_ride"
            android:layout_width="0dp"
            android:layout_weight="0.40"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/destination_label"
            android:layout_width="0dp"
            android:layout_weight="0.60"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end"/>

    </LinearLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
        xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBg">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/taxi_item_height"
            android:background="@color/mainBg">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="70dip"
                android:layout_height="90dip"
                android:src="@drawable/ic_taxi"
                android:scaleType="centerInside"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="-2dp"/>

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_toRightOf="@+id/photo"
                android:paddingTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dip"
                android:textSize="18sp"
                android:lines="2"
                android:text="@string/not_found"
                android:ellipsize="end" />

        </RelativeLayout>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:layout_margin="20dp"
            bootstrapbutton:bb_icon_left="fa-times"
            bootstrapbutton:bb_type="danger"
            bootstrapbutton:bb_roundedCorners="false"
            bootstrapbutton:bb_size="large"/>

    </RelativeLayout>

</LinearLayout><!-- From: file:/C:/projects-android/icm_travis/app/src/main/res/layout/ride_client_item.xml -->