<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
                xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/see_more"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/see_more"
        android:layout_alignParentBottom="true"
        bootstrapbutton:bb_type="warning"
        bootstrapbutton:bb_roundedCorners="false"
        bootstrapbutton:bb_size="normal"
        android:onClick="onSeeMoreRidesButtonClicked"/>

    <TextView
        android:id="@+id/your_scheduled_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="15dp"
        android:text="@string/your_scheduled_ride"
        android:background="@color/mainBg"/>

    <FrameLayout
        android:id="@+id/ride_item_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/your_scheduled_ride"
        android:layout_above="@id/see_more"
        android:background="@color/mainBg"/>
</RelativeLayout><!-- From: file:/C:/projects-android/icm_travis/app/src/main/res/layout/wait_for_taxi_rideview.xml -->