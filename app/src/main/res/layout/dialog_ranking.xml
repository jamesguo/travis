<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
              xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="2dip">

    <TextView
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Rate this taxi"/>

    <TextView
        android:id="@+id/dialog_taxi_name"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Rate this taxi"/>

    <RatingBar
        android:id="@+id/dialog_ratingbar"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_gravity="center"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="0"
        android:isIndicator="false"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/stub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="2dp"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/stub"
            android:text="@string/submit"
            android:focusable="false"
            android:layout_margin="5dip"
            android:textColor="#FFF8C6"
            bootstrapbutton:bb_type="default"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_size="large"
            android:textSize="20sp" />
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/no_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/stub"
            android:text="@string/dont_rate"
            android:focusable="false"
            android:layout_margin="5dip"
            android:textColor="#FFF8C6"
            bootstrapbutton:bb_type="default"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_size="large"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>