<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
                xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/selectorBg"
                android:clipChildren="false"
                android:clickable="false">

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:enabled="false"
        android:background="@color/selectorBg"/>

    <View
        android:id="@+id/centerShim"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/centerShim"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btOrigin"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/centerShim"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/set_origin"
        android:textSize="15sp"
        bootstrapbutton:bb_icon_left="fa-location-arrow"
        bootstrapbutton:bb_type="info"
        bootstrapbutton:bb_roundedCorners="false"
        bootstrapbutton:bb_size="normal"
        android:onClick="onOriginButtonClicked"/>

    <TextView
        android:id="@+id/origin_address"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_toRightOf="@id/timePicker"
        android:layout_below="@id/btOrigin"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/abs__ab_bottom_solid_light_holo"
        android:textAlignment="center"
        android:gravity="center"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btDone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/centerShim"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="@string/done"
        android:textSize="15sp"
        bootstrapbutton:bb_icon_left="fa-check"
        bootstrapbutton:bb_type="success"
        bootstrapbutton:bb_roundedCorners="true"
        bootstrapbutton:bb_size="normal"
        android:onClick="onDoneButtonClicked"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btCancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/centerShim"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="@string/cancel"
        android:textSize="15sp"
        bootstrapbutton:bb_icon_left="fa-times"
        bootstrapbutton:bb_type="danger"
        bootstrapbutton:bb_roundedCorners="true"
        bootstrapbutton:bb_size="normal"
        android:onClick="onCancelButtonClicked"/>

</RelativeLayout>
