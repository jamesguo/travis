<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="Theme.Travis" parent="@style/Theme.Sherlock.Light">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionBarItemBackground">@drawable/background_selectable</item>
        <item name="popupMenuStyle">@style/PopupMenu.Travis</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Travis</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Travis</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Travis</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Travis</item>
        <item name="actionModeBackground">@drawable/cab_background_top_travis</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_travis</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Travis</item>
        <item name="ptrHeaderStyle">@style/Widget.Custom.PtrHeader</item>
    </style>

    <style name="Widget.Custom.PtrHeader" parent="android:Widget">
        <item name="ptrHeaderBackground">@color/travis_color</item>
        <item name="ptrHeaderTitleTextAppearance">@style/TextAppearance.Custom.PtrHeader.Title</item>
        <item name="ptrProgressBarColor">@color/travis_color</item>
    </style>

    <style name="TextAppearance.Custom.PtrHeader.Title" parent="android:TextAppearance.Large.Inverse">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DialogStyleLight_Custom">
        <item name="titleTextColor">@color/travis_color</item>
        <item name="titleSeparatorColor">@color/dialog_title_separator</item>
        <item name="messageTextColor">@color/dialog_message_text</item>
        <item name="buttonTextColor">@color/dialog_button_text</item>
        <item name="buttonSeparatorColor">@android:color/white</item>
        <item name="buttonBackgroundColorNormal">@android:color/white</item>
        <item name="buttonBackgroundColorPressed">@color/dialog_button_pressed</item>
        <item name="buttonBackgroundColorFocused">@color/dialog_button_focused</item>
        <item name="dialogBackground">@android:color/white</item>
    </style>

    <style name="DialogStyleLight_FullScreen">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="titleTextColor">@color/travis_color</item>
        <item name="titleSeparatorColor">@color/dialog_title_separator</item>
        <item name="messageTextColor">@color/dialog_message_text</item>
        <item name="buttonTextColor">@color/dialog_button_text</item>
        <item name="buttonSeparatorColor">@android:color/white</item>
        <item name="buttonBackgroundColorNormal">@android:color/white</item>
        <item name="buttonBackgroundColorPressed">@color/dialog_button_pressed</item>
        <item name="buttonBackgroundColorFocused">@color/dialog_button_focused</item>
        <item name="dialogBackground">@android:color/white</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">@color/travis_color_darker</item>
        <item name="sv_showcaseColor">@color/travis_color</item>
        <item name="sv_buttonText">Hide</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@color/travis_color</item>
    </style>

    <style name="ActionBar.Solid.Travis" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="android:background">@color/travis_color</item>
        <!--<item name="background">@drawable/ab_solid_travis</item>-->
        <item name="backgroundStacked">@drawable/ab_stacked_solid_travis</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_travis</item>
        <item name="progressBarStyle">@style/ProgressBar.Travis</item>
        <item name="android:displayOptions">none</item>
    </style>

    <style name="ActionBar.Transparent.Travis" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_travis</item>
        <item name="progressBarStyle">@style/ProgressBar.Travis</item>
    </style>

    <style name="PopupMenu.Travis" parent="@style/Widget.Sherlock.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_travis</item>
    </style>

    <style name="DropDownListView.Travis" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/background_selectable</item>
    </style>

    <style name="ActionBarTabStyle.Travis" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="android:background">@drawable/action_bar_tab_indicator</item>
        <item name="android:padding">9dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="DropDownNav.Travis" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/background_action_bar_spinner</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_travis</item>
        <item name="android:dropDownSelector">@drawable/background_selectable</item>
    </style>

    <style name="ProgressBar.Travis" parent="@style/Widget.Sherlock.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
    </style>

    <style name="ActionButton.CloseMode.Travis" parent="@style/Widget.Sherlock.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_travis</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Travis.Widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/PopupMenu.Travis</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Travis</item>
    </style>

    <style name="RatingBarSmall_travis">
        <item name="android:progressDrawable">@drawable/ratingbar_small</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_small</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="BaseText">
        <item name="android:typeface">sans</item>
    </style>

    <style name="PostText" parent="@style/BaseText">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SignatureText" parent="@style/BaseText">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AnnounceText" parent="@style/BaseText">
        <item name="android:textColor">@color/travis_color</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DisplayText" parent="@style/BaseText">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="IntroTitleText" parent="@style/BaseText">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="IntroDscrpText" parent="@style/BaseText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!-- TextView Service Name -->
    <style name="textViewServiceName" parent="android:Widget.TextView">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">visible</item>
    </style>

    <!-- TextView Asset Fragment Label -->
    <style name="textViewFragmentLabel" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <!--<item name="android:background">?topBarBackground</item>-->
        <!--<item name="android:textAllCaps">true</item>-->
        <!--<item name="android:textColor">?topBarTextColor</item>-->
    </style>

    <!-- TextView Sign Out Label -->
    <style name="textViewSignOut" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <!--<item name="android:background">?topBarBackground</item>-->
        <!--<item name="android:textColor">?topBarTextColor</item>-->
    </style>

    <!-- TextView Default Small -->
    <style name="textViewDefaultSmall" parent="android:Widget.TextView">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
    </style>

    <!-- TextView Progress Dialog -->
    <style name="textViewProgressDialog" parent="textViewDefaultSmall">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- TextView Notification Dialog -->
    <style name="textViewNotificationDialog" parent="textViewDefaultSmall">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- LinearLayout Empty Fragment Label -->
    <style name="linearLayoutEmptyFragmentLabel" parent="android:Widget.TextView">
        <!--<item name="android:background">?topBarBackground</item>-->
    </style>

    <!-- LinearLayout Progress Dialog -->
    <style name="linearLayoutProgressDialog">
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/progress_bar_window</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- LinearLayout Notification Dialog -->
    <style name="linearLayoutNotificationDialog" parent="linearLayoutProgressDialog">
        <item name="android:background">@drawable/notification_window</item>
    </style>

    <!-- RelativeLayout Assets Adapter Item Holder -->
    <style name="relativeLayoutAdapterItemHolder">
        <item name="android:background">@color/gray_light</item>
        <item name="android:padding">1dp</item>
    </style>

    <!-- RelativeLayout Asset Fragment -->
    <style name="relativeLayoutAssetFragment">
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- ImageView Default Assets -->
    <style name="imageViewDefaultAssets">
        <item name="android:background">@drawable/photo_placeholder</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>