<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
                xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="TRAVIS"
            android:id="@+id/textView"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Utilizador:"
            android:id="@+id/textView2"
            android:layout_marginTop="80dp" android:layout_below="@+id/textView" android:layout_alignParentLeft="true"
            android:layout_marginLeft="34dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Password:"
            android:id="@+id/textView3" android:layout_below="@+id/textView2" android:layout_alignLeft="@+id/textView2"
            android:layout_marginTop="36dp"/>
    <com.beardedhen.androidbootstrap.BootstrapEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            bootstrapbutton:bb_icon_left="fa-map-marker"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_size="large"/>
    <com.beardedhen.androidbootstrap.BootstrapEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignRight="@+id/editText"
            bootstrapbutton:bb_icon_left="fa-map-marker"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_size="large"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrar"
            android:id="@+id/button"
            android:onClick="sendMessage2"
            android:layout_marginTop="34dp" android:layout_below="@+id/editText"
            android:layout_alignRight="@+id/editText"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="GPS:"
            android:id="@+id/textView4"
            android:layout_marginBottom="80dp" android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView3"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textView5"
            android:layout_alignTop="@+id/textView4" android:layout_alignLeft="@+id/textView"/>
</RelativeLayout>