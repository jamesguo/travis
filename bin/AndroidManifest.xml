<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ua.travis"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <permission
        android:name="pt.ua.travis.maps.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" >
    </permission>

    <uses-permission android:name="pt.ua.travis.maps.permission.MAPS_RECEIVE" />

    <!-- Used by the API to download map tiles from Google Maps servers. -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Allows the API to check the connection status in order to determine whether data can be downloaded. -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <!-- Allows the API to access Google web-based services. -->
    <uses-permission android:name="android.permission.READ_GSERVICES"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>

    <!-- Allows the API to cache map tile data in the device's external storage area. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- Allows the API to use WiFi or mobile cell data (or both) to determine the device's location. -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <!-- Allows the API to use the Global Positioning System (GPS) to determine the device's location to within a very small area. -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <!-- Specifies application requirement for OpenGL ES version 2. -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/travis_custom">

        <uses-library android:name="com.google.android.maps" />

        <activity android:name="pt.ua.travis.maps.Inicial"
                  android:label="@string/app_name" />
        <activity
            android:name="pt.ua.travis.maps.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name="pt.ua.travis.maps.MarkersTaxi"
            android:label="@string/title_activity_markers_taxi" />

        <activity android:name=".gui.taxichooser.TaxiChooserActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- Google Maps API key for the application -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAgSzr3ubuzS5mFR5g8z-weAzsw53MK5KI"/>
        
        
        <!-- Reference to the Google Play services version -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>
</manifest>

